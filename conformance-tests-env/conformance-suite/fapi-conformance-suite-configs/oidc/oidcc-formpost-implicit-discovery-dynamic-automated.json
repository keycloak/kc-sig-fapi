{
    "alias": "keycloak",
    "description": "OpenID Connect Core: Form Post Implicit Certification Profile (server_metadata:discovery/client_registration:dynamic_client)",
    "server": {
        "discoveryUrl": "https://as.keycloak-fapi.org/auth/realms/test/.well-known/openid-configuration",
        "login_hint": "john"
    },
    "browser": [
        {
            "match": "https://as.keycloak-fapi.org/auth/realms/test/protocol/openid-connect/auth*",
            "tasks": [
                {
                    "task": "Initial Login",
                    "match": "https://as.keycloak-fapi.org/auth/realms/test/protocol/openid-connect/auth*",
                    "optional": true,
                    "commands": [
                        [
                            "text",
                            "name",
                            "username",
                            "john"
                        ],
                        [
                            "text",
                            "name",
                            "password",
                            "john"
                        ],
                        [
                            "click",
                            "name",
                            "login"
                        ]
                    ]
                },
                {
                    "task": "Authorize Client",
                    "match": "https://as.keycloak-fapi.org/auth/realms/test/login-actions/required-action*",
                    "optional": true,
                    "commands": [
                        [
                            "click",
                            "name",
                            "accept"
                        ]
                    ]
                },
                {
                    "task": "Verify Complete",
                    "match": "https://*/test/a/keycloak/callback*",
                    "optional": true,
                    "commands": [
                        [
                            "wait",
                            "id",
                            "submission_complete",
                            10
                        ]
                    ]
                }
            ]
        }
    ],
    "override": {
        "oidcc-prompt-login": {
            "browser": [
                {
                    "match": "https://as.keycloak-fapi.org/auth/realms/test/protocol/openid-connect/auth*",
                    "tasks": [
                        {
                            "task": "Prompted Login",
                            "match": "https://as.keycloak-fapi.org/auth/realms/test/protocol/openid-connect/auth*prompt=login",
                            "optional": true,
                            "commands": [
                                [
                                    "wait",
                                    "xpath",
                                    "//span[@class='pf-c-alert__title kc-feedback-text']",
                                    10,
                                    ".*Please re-authenticate to continue.*",
                                    "update-image-placeholder"
                                ],
                                [
                                    "text",
                                    "name",
                                    "password",
                                    "john"
                                ],
                                [
                                    "click",
                                    "name",
                                    "login"
                                ]
                            ]
                        },
                        {
                            "task": "Initial Login",
                            "match": "https://as.keycloak-fapi.org/auth/realms/test/protocol/openid-connect/auth*",
                            "optional": true,
                            "commands": [
