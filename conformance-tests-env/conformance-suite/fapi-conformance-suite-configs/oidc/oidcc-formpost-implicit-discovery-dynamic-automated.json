        "oidcc-ensure-registered-redirect-uri": {
            "browser": [
                {
                    "match": "https://as.keycloak-fapi.org/auth/realms/test/protocol/openid-connect/auth*",
                    "tasks": [
                        {
                            "task": "Initial Login without redirect_uri",
                            "match": "https://as.keycloak-fapi.org/auth/realms/test/protocol/openid-connect/auth*",
                            "optional": true,
                            "commands": [
                                [
                                    "wait",
                                    "xpath",
                                    "//p[@class='instruction']",
                                    10,
